<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.goldfenrir.hs.Profile">

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar2"
        android:rating="3.5"
        android:stepSize=".5"
        android:layout_below="@+id/textViewRatingProfile"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Rating"
        android:id="@+id/textViewRatingProfile"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Hands"
        android:id="@+id/textViewTotalServicesProfile"
        android:textSize="18dp"
        android:layout_below="@+id/ratingBar2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:id="@+id/textViewNumberServices"
        android:textSize="18dp"
        android:layout_below="@+id/ratingBar2"
        android:layout_toEndOf="@+id/textViewTotalServicesProfile"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Needs"
        android:id="@+id/textView15"
        android:textSize="18dp"
        android:layout_below="@+id/textViewTotalServicesProfile"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:id="@+id/textView16"
        android:textSize="18dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/textViewNumberServices"
        android:layout_alignStart="@+id/textViewNumberServices" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Name    Diego"
        android:id="@+id/textView17"
        android:textSize="18dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="170dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Last Name    Bustamante"
        android:id="@+id/textView18"
        android:textSize="18dp"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username  golfenrir"
        android:id="@+id/textView19"
        android:textSize="18dp"
        android:layout_below="@+id/textView18"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email jdbustamante@pucp.pe"
        android:id="@+id/textView20"
        android:textSize="18dp"
        android:layout_below="@+id/textView19"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number 999999"
        android:id="@+id/textView21"
        android:textSize="18dp"
        android:layout_below="@+id/textView20"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address Av. Universitaria 1234"
        android:id="@+id/textView22"
        android:textSize="18dp"
        android:layout_below="@+id/textView21"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:id="@+id/btnEditProfile"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/textView22"
        android:layout_toEndOf="@+id/textView16" />

</RelativeLayout>
